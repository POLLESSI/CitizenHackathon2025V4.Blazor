@page "/gptinteraction"
@using CitizenHackathon2025V4.Blazor.Client.Pages.GenericEntities
@using CitizenHackathon2025V4.Blazor.Client.Common.SignalR
@inherits SignalRComponentBase<GptInteractionModel>
@inject IJSRuntime JS

<h3 class="mt-3">🧠 Interactions GPT</h3>

@if (IsLoading)
{
    <div class="alert alert-info">Chargement des interactions GPT...</div>
}
else if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else
{
    <div class="table-responsive" @ref="ScrollContainerRef" @onscroll="HandleScroll"
         style="max-height: 400px; overflow-y: auto; border: 1px solid #444; border-radius: 8px;">
        <table class="table table-hover table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Prompt</th>
                    <th>Réponse</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in VisibleItems)
                {
                    <tr class="@GetRowClass(item)">
                        <td>@item.Id</td>
                        <td>@item.Prompt</td>
                        <td>@item.Response</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => SelectItem(item.Id))">
                                Détail
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (IsLoadingMore)
        {
            <div class="text-center my-2 text-secondary">Additional loading...</div>
        }
    </div>
}

@if (SelectedItem is not null)
{
    <div class="mt-4 card border-info">
        <div class="card-header bg-info text-white">
            Détail de l'interaction #@SelectedItem.Id
        </div>
        <div class="card-body">
            <p><strong>Prompt :</strong> @SelectedItem.Prompt</p>
            <p><strong>Réponse :</strong> @SelectedItem.Response</p>
            <p><strong>Date :</strong> @SelectedItem.CreatedAt.ToString("f")</p>
        </div>
    </div>
    <div class="detail-container">
        <p>Info on suggestion</p>
    </div>

    <div class="card">Statistics</div>

    <button class="btn">Send</button>
    <div class="ultra-luxe">
        <GptInteraction /> 
    </div>
}

