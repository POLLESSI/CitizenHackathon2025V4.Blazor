@page "/event/{Id:int}"
@inherits EventDetail
@inject Blazored.Toast.Services.IToastService ToastService

@* <button class="btn btn-primary" @onclick="() => ToastService.ShowSuccess(" It works !", "Success" )">
    Test the toast
</button> *@

<h3>Event Detail</h3>

@if (CurrentEvent is not null)
{
    <div class="detail-container bordeaux-background">
        <p>Name : @CurrentEvent.Name</p>
        <p>Latitude : @CurrentEvent.Latitude</p>
        <p>Longitude : @CurrentEvent.Longitude</p>
        <p>DateEvent : @CurrentEvent.DateEvent</p>
        <p>ExpectedCrowd : @CurrentEvent.ExpectedCrowd</p>
        <p>IsOutdoor : @CurrentEvent.IsOutdoor</p>
    </div>
}
else
{
    <p>Loading Event details...</p>
}


















































































