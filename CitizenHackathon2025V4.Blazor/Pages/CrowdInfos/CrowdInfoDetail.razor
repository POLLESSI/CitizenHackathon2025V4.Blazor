<h3>CrowdInfoDetail</h3>

@if (CurrentCrowdInfo is not null)
{
    <div class="detail-container bordeaux-background">
        <p>Location Name : @CurrentCrowdInfo.LocationName</p>
        <p>Latitude : @CurrentCrowdInfo.Latitude</p>
        <p>Longitude : @CurrentCrowdInfo.Longitude</p>
        <p>CrowdLevel : @CurrentCrowdInfo.CrowdLevel</p>
        <p>TimeStamp : @CurrentCrowdInfo.Timestamp</p>
    </div>
}
else
{
    <p>Loading Crowd infos details...</p>
}


